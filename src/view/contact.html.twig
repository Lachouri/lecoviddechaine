{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Nous contacter{% endblock %}
{% block style %} 
    <style>
        #login .container #login-row #login-column #login-box {
            margin-top: 60px;
            max-width: 600px;
            height: 460px;
            border: 1px solid #9C9C9C;
            background-color: #EAEAEA;
        }
        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }
        #login .container #login-row #login-column #login-box #login-form #register-link {
            margin-top: -85px;
        }</style>
    {% endblock %}

{% block content %}
    {% if form.valide is defined %}

        {% if form.valide == true %}
            <div class="container">
                        <p id="index-title">Nous contacter</p>

                <div id="index-content">
                    {{ form.message }}
                </div>

            </div>
        {% else %}
            <div class="container">
                        <p id="index-title">Nous contacter</p>

                <div id="index-content">
                    {{ form.message }}
                </div>

            </div>
        {% endif %}
    {% else %}
        <div id="login">
            <div class="container" >
                <div id="login-row" class="row justify-content-center align-items-center"v>
                    <div id="login-column" class="col-md-6" >
                        <div id="login-box" class="col-md-12">
                            <form action="?page=contact" id="signin" method="post">
                                <h3 class="text-center" style="margin-top:20px;">Nous contacter</h3>
                                <h1 class="h3 mb-3 font-weight-normal"></h1>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="firstName" placeholder="Votre nom..." required/>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="lastName" placeholder="Votre prÃ©nom..." required/>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="email" placeholder="Votre email..." required/>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="subject" placeholder="L'objet..." required/>
                                </div>

                                <div class="form-group">
                                    <textarea class="form-control" name="message" col="15" row="15" placeholder="Votre message..." required></textarea>
                                </div>

                                <input type="submit" name="btSendForm" value="Envoyer" class="btn btn-info btn-md"/>
                            </form>
                        </div>
                    </div>
                </div>
            </div> 
        </div>


    {% endif %}
{% endblock %}
